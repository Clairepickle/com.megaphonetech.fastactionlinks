<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Fastactionlinks</base>
  <class>FastActionLink</class>
  <name>civicrm_fast_action_link</name>
  <comment></comment>
  <add>4.6</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FastActionLink ID</comment>
    <add>4.6</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
    <name>uf_group_id</name>
    <title>Profile ID</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Which profile this link is associated with.</comment>
    <add>4.6</add>
    <pseudoconstant>
      <table>civicrm_uf_group</table>
      <keyColumn>id</keyColumn>
      <labelColumn>title</labelColumn>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>
  <foreignKey>
    <name>uf_group_id</name>
    <table>civicrm_uf_group</table>
    <key>id</key>
    <add>4.6</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>
    <name>action</name>
    <title>The action associated with this link</title>
    <type>varchar</type>
    <length>64</length>
    <required>true</required>
    <comment>e.g. addToGroup, removeFromGroup.</comment>
    <add>4.6</add>
  </field>
  <field>
    <name>action_entity_id</name>
    <title>Action Entity ID</title>
    <type>int unsigned</type>
    <comment>If the action requires an entity ID, it is stored here.</comment>
    <add>4.6</add>
  </field>
  <field>
    <name>dim_on_use</name>
    <title>Dim on Use</title>
    <type>boolean</type>
    <default>1</default>
    <comment>Should this link be disabled and the corresponding search result dimmed on click?</comment>
    <add>4.6</add>
  </field>
  <field>
    <name>is_active</name>
    <title>Action Link Is Active</title>
    <type>boolean</type>
    <default>1</default>
    <comment>Is this link currently active?  If not, do not show.</comment>
    <add>4.6</add>
  </field>
  <field>
    <name>weight</name>
    <title>Order</title>
    <type>int</type>
    <required>true</required>
    <default>1</default>
    <comment>Controls order in which links appear.</comment>
    <add>4.6</add>
  </field>
</table>
